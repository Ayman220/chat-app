{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "A modern real-time chat application with WhatsApp-like features",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "node dist/index.js",
    "server": "ts-node server/index.ts",
    "server:dev": "nodemon --exec ts-node server/index.ts",
    "client": "cd client && npm start",
    "build": "tsc && cd client && npm run build",
    "build:server": "tsc",
    "build:watch": "tsc --watch",
    "install-all": "npm install && cd client && npm install",
    "setup-db": "ts-node server/database/setup.ts"
  },
  "keywords": [
    "chat",
    "real-time",
    "messaging",
    "socket.io",
    "react"
  ],
  "author": "Ayman Audi",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/mysql": "^2.15.27",
    "@types/node": "^24.0.14",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
